<mah:MetroWindow x:Class="FalkirkBinAlert.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:FalkirkBinAlert"
        mc:Ignorable="d"
        Title="Falkirk Bins"
        Icon="Bin.ico"
        Height="418" Width="232"
        ShowMaxRestoreButton="False"
        SaveWindowPosition="True"
        Loaded="MetroWindow_Loaded"
        Closing="MetroWindow_Closing"
        Closed="MetroWindow_Closed">
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button x:Name="Settings"
                    VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Settings"
                    Click="Settings_Click">
                <iconPacks:PackIconMaterialLight Kind="Cog" />
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>
    <Grid>
        <Border Margin="10 4">
            <Viewbox Stretch="Uniform">
                <ItemsControl x:Name="BinStatusList" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="0 4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" Cursor="Hand" Click="BinButton_Click">
                                        <Button.Template>
                                            <ControlTemplate>
                                                <Grid>
                                                    <Rectangle Width="100" Height="40" Fill="{Binding Color}" RadiusX="5" RadiusY="5"/>
                                                    <TextBlock Text="{Binding Title}" Foreground="White" TextAlignment="Center" VerticalAlignment="Center"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10 0 0 0">
                                        <TextBlock Text="{Binding When}" />
                                        <TextBlock Text="{Binding Day}" FontStyle="Italic"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Viewbox>
        </Border>
        <StackPanel x:Name="NetworkError" Visibility="Hidden">
            <Border BorderThickness="1" BorderBrush="Red" Margin="10" CornerRadius="10">
                <TextBlock  TextWrapping="Wrap" Foreground="Red" Margin="10" FontSize="20" TextDecorations="underline">
                        Uable to obtain bin data from Falkirk Council.
                </TextBlock>
            </Border>
            <TextBlock TextWrapping="Wrap" Margin="10" FontSize="16">
                    Your internet or the Falkirk Council web servers may be down.
            </TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="10" FontSize="16">
                    I'll try again in a few minutes.
            </TextBlock>
        </StackPanel>
        <StackPanel x:Name="NoLocation" Visibility="Hidden">
            <Border BorderThickness="1" BorderBrush="Red" Margin="10" CornerRadius="10" Padding="0 10">
                <TextBlock  TextWrapping="Wrap" HorizontalAlignment="Center" Foreground="Red" FontSize="20" FontWeight="Bold">
                    Where are you?
                </TextBlock>
            </Border>
            <TextBlock  TextWrapping="Wrap" Margin="10">
                No location has been set. Click on the cog icon in the title bar to set your location.
            </TextBlock>
            <Image Source="wheelie-bin.png" Width="96" Height="96" Margin="0 40 0 0"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
