<UserControl x:Class="FalkirkBinAlert.ErrorHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FalkirkBinAlert"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="{x:Type local:ErrorHeader}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type local:ErrorHeader}">
                        <Border BorderThickness="1" BorderBrush="Red" Margin="10" CornerRadius="10" Padding="0 10" Width="Auto">
                            <TextBlock TextWrapping="Wrap"
                                       HorizontalAlignment="Center"
                                       Foreground="Red" FontSize="20"
                                       FontWeight="Bold"
                                       Text="{TemplateBinding Content}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
</UserControl>
